<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:constantSize="true">
    <item android:state_checked="true" android:state_window_focused="false"
          android:drawable="@drawable/ic_radio_button_checked" />
    <item android:state_checked="false" android:state_window_focused="false"
          android:drawable="@drawable/ic_radio_button_empty" />

    <item android:state_checked="true" android:state_pressed="true"
          android:drawable="@drawable/ic_stanoviste_bck_down" />
    <item android:state_checked="false" android:state_pressed="true"
          android:drawable="@drawable/ic_stanoviste_bck_down" />

    <item android:state_checked="true" android:state_focused="true"
          android:drawable="@drawable/ic_radio_button_checked" />
    <item android:state_checked="false" android:state_focused="true"
          android:drawable="@drawable/ic_radio_button_empty" />

    <item android:state_checked="false" android:drawable="@drawable/ic_radio_button_empty" />
    <item android:state_checked="true" android:drawable="@drawable/ic_radio_button_checked" />

</selector>